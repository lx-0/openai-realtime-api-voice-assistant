entrypoint = "src/server.ts"

modules = ["nodejs-20", "nix"]
hidden = [".config", "package-lock.json", "tsconfig.json"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[unitTest]
language = "nodejs"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

